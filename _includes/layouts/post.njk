---
layout: layouts/base.njk
---

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <article class="post-detail-article">
          <h1 class="post-detail-title">{{ title }}</h1>
          <div class="post-detail-meta">
            <time class="post-date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
            <span class="post-meta-separator">•</span>
            <span class="post-reading-time">{{ content | striptags | wordcount | readingTime }}</span>
            <span class="post-meta-separator">•</span>
            <span class="post-word-count">{{ content | striptags | wordcount }} Wörter</span>
          </div>
          <div class="post-detail-tags">
            {%- for tag in tags | filterTagList -%}
              {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
              <a href="{{ tagUrl | url }}" class="post-tag">
                <span class="tag {% badge loop.index-1 %}{{ index }}{% endbadge %}">
                  {{ tag | title }}
                </span>
              </a>
            {%- endfor %}
          </div>
        <div class="content post_detail__content">
          <div class="language-hint">
            {% if lang == "de" %}
              <a href="{{ alternate_url }}">Read in English <img width="25" src="{{ '/assets/images/gb.svg' | url }}" alt="English flag"/></a>
            {% elseif lang == "en" %}
              <a href="{{ alternate_url }}">Auf Deutsch lesen <img width="25" src="{{ '/assets/images/de.svg' | url }}" alt="German flag"/></a>
            {% endif %}
          </div>
          {{ content | safe }}
          </div>

          {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
          {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
          {%- if nextPost or previousPost %}
            <nav class="post-navigation">
              {%- if previousPost %}
                <a href="{{ previousPost.url | url }}" class="post-nav-card post-nav-prev">
                  <span class="post-nav-label">← Vorheriger Artikel</span>
                  <span class="post-nav-title">{{ previousPost.data.title }}</span>
                </a>
              {% endif %}
              {%- if nextPost %}
                <a href="{{ nextPost.url | url }}" class="post-nav-card post-nav-next">
                  <span class="post-nav-label">Nächster Artikel →</span>
                  <span class="post-nav-title">{{ nextPost.data.title }}</span>
                </a>
              {% endif %}
            </nav>
          {%- endif %}
        </article>
      </div>
      </div>
    </div>
  </section>